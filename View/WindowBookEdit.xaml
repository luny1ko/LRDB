<Window x:Class="LR_DB.View.WindowBookEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование книги" Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Название:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,5"/>
        <TextBox x:Name="Name" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5"/>

        <TextBlock Text="Жанр:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,5"/>
        <ComboBox x:Name="Genre" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5"
                  DisplayMemberPath="Name" SelectedValuePath="Id"/>

        <TextBlock Text="Цена:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,5"/>
        <TextBox x:Name="Price" Grid.Row="2" Grid.Column="1" Margin="0,0,0,5"/>

        <TextBlock Text="Количество:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,5"/>
        <TextBox x:Name="Count" Grid.Row="3" Grid.Column="1" Margin="0,0,0,5"/>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="75" Margin="5,0" Click="Ok_Click"/>
            <Button Content="Отмена" Width="75" Margin="5,0" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
